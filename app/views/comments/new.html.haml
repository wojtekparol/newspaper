.container-fluid
  .row
    .col-md-4.col-md-offset-4
      %h4
        Komentarz do artykułu
        %br
        "#{@article.title}"
      = form_for @comment do |f|
        %p
          = f.label :text, 'Treść komentarza'
          = f.text_area :text, rows: "10"
        %p
          = f.label :author, 'Autor'
          = f.text_field :author
        %p
          = f.hidden_field :article_id, :value => @article.id
          = f.submit "Dodaj komentarz!", class: "btn btn-primary"
      = link_to 'Wróć', :back, class: "btn btn-primary"