.container-fluid
  .row
    .col-md-4.col-md-offset-4
      - if alert
        .alert.alert-danger
          %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} &times;
          = alert
      = form_for @article do |f|
        %h3 Nowy artykuł
        %p
          = f.label :title, 'Tytuł'
          = f.text_field :title, placeholder: "wpisz tytuł artukułu"
        %p
          = f.label :text, 'Treść'
          = f.text_area :text, rows: "10"
        %p
          = f.submit 'Dodaj!', class: "btn btn-primary"
      = link_to 'Wróć', :back, class: "btn btn-warning"
