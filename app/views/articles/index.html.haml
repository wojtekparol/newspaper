.container
  - if alert
    .alert.alert-danger
      %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} &times;
      = alert
  - if notice
    .alert.alert-success
      %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :type => "button"} &times;
      = notice
  %ul.list-group
    - @articles.each do |article|
      %li.list-group-item
        %h4= article.title
        = link_to article_path(article), method: :delete, data: { confirm: "Na pewno usunąć?" }, class: 'btn btn-danger btn-sm pull-right' do
          %span &times;
          Usuń
        = link_to 'Edytuj', edit_article_path(article), class: 'btn btn-info btn-sm pull-right'        
        %p= article.text
      %p.comments
        Komentarzy:
        = article.comments.count
        = link_to 'Dodaj komentarz', '#'
  = link_to 'Nowy', new_article_path, class: "btn btn-primary"