.container
  .row
    .col-md-4.col-md-offset-4
      %h2 Nowe konto
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        - if @admin.errors.any?
          %p{ :class => 'alert alert-danger medium' }
            Błąd!
            %span.pull-right.glyphicon.glyphicon-warning-sign
        .field
          .form-group{ :class => ('has-error' if @admin.errors[:email].any?) }
            = f.label :email, class: 'control-label'
            .input-group
              = f.email_field(:email, autofocus: false, class: "form-control")
        .field
          .form-group{ :class => ('has-error' if @admin.errors[:password].any?) }
            = f.label :password, "Hasło" + (" (minimum #{@minimum_password_length} znaków)" if @minimum_password_length), class: 'control-label'
            .input-group
              = f.password_field(:password, autocomplete: "off", class: "form-control")
        .field
          .form-group{ :class => ('has-error' if @admin.errors[:password_confirmation].any?) }
            = f.label :password_confirmation, "Potwierdź hasło", class: 'control-label'
            .input-group
              = f.password_field(:password_confirmation, autocomplete: "off", class: "form-control")
        .actions
          = f.submit "Załóż konto!", class: "btn btn-primary fullwidth"
      = render "devise/shared/links"
